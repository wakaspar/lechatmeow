<header>
  <div class="ui container">
    <div class="ui stackable">
      <div class="six wide column">
       <h1><%= link_to 'Le Chat Meow', root_path, class: "logo" %></h1>
      </div>

      <nav class="four wide column">


        <div class="ui secondary menu">
          <% if user_signed_in? %>

            <div class="ui right item">
              <%= link_to new_chatroom_path do %>
                <p> <i class="add circle icon"></i> Create New Chat</p>
              <% end %>
            </div>

            <div class="ui right dropdown item">


              <%= current_user.first_name %>
              <i class="dropdown icon"></i>
              <div class="menu">
                <div class="item">
                  <%= link_to 'Profile', user_path(current_user.id) %>
                </div>
                <div class="item">
                  <%= link_to 'Settings', edit_user_registration_path %>
                </div>
                <div class="item">
                  <%= link_to 'Log out', destroy_user_session_path, method: :delete %>
                </div>
              </div>
            </div>
          <% else %>
            <%= link_to 'Log In', new_user_session_path, class: "item" %>
            <%= link_to 'Sign Up', new_user_registration_path, class: "item" %>
          <% end %>
        </div>
      </nav>
    </div>
  </div>
</header>
