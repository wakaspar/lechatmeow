    </div> -->

    <div class="actions">
      <%= f.submit "Update" %>
    </div>
  <% end %>
  <br>    
    <h3><%= link_to 'Change Password', edit_user_path %></h3>
  <br>

  <div class="ui divider"></div>
  <h2>Cancel Account</h2>
  <p>Would you like to cancel your account? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

  <%= fa_icon "caret-left" %> <%= link_to "Back", :back %>
</div>
